@model IEnumerable<ControleDeEstoque.Models.Produto>

@{
    ViewData["Title"] = "Estoque de produtos";
}

<h1>Lista de Produtos</h1>
@if (User.Identity.IsAuthenticated)
{
    <p>
        <div class="d-grid gap-2 d-md-flex justify-content-md-start">
            <a class="btn btn-primary" asp-action="Create" role="button">Adicionar novo</a>
        </div>
    </p>
}
<table class="table" id="tabelaProdutos">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantidade)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantidade)
            </td>
            <td>
                 <div class="d-grid gap-2 d-md-flex justify-content-md-start">
            @if (User.Identity.IsAuthenticated)
            {
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id" role="button">Editar</a>
            }
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id" role="button">Detalhes</a>
            @if (User.Identity.IsAuthenticated)
            {
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id" role="button">Excluir</a>
            }
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
